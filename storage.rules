rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Notes files - authenticated users can upload, anyone can read
    match /notes/{fileName} {
      allow read: if true; // Anyone can download notes
      allow write: if request.auth != null;
    }
    
    // Product images - authenticated users can upload, anyone can read
    match /products/{fileName} {
      allow read: if true; // Anyone can view product images
      allow write: if request.auth != null;
    }
    
    // Event posters - authenticated users can upload, anyone can read
    match /events/{fileName} {
      allow read: if true; // Anyone can view event posters
      allow write: if request.auth != null;
    }
    
    // Default rule for other files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
